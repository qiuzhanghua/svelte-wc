{
  "name": "@qiuzhanghua/wc",
  "private": false,
  "version": "0.0.5",
  "type": "module",
  "files": [
    "src",
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "package": "svelte-package -o dist/types",
    "rm-svelte": "rimraf ./dist/types/**/*.svelte",
    "build-all": "pnpm build && pnpm package && pnpm rm-svelte",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint src --ext .ts --ext .svelte --ext .html",
    "format": "prettier --write --plugin-search-dir=. \"./**/*.svelte\" \"./**/*.ts\" --write",
    "clean": "rimraf ./dist"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.0.2",
    "@sveltejs/vite-plugin-svelte": "^2.2.0",
    "@tsconfig/svelte": "^4.0.1",
    "@types/node": "^20.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.0",
    "rimraf": "^5.0.0",
    "sveld": "^0.18.0",
    "svelte": "^3.59.1",
    "svelte-check": "^3.3.2",
    "svelte-preprocess": "^5.0.3",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vite-plugin-dts": "^2.3.0"
  },
  "peerDependencies": {
    "svelte": "^3.0.0"
  }
}
